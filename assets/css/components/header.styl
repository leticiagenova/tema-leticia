  #header-top
    background-color #f6f6f6
    border-bottom 1px solid #eee
    padding 10px 0px
    color #303030
    font-size 15px
    font-family "Source Sans Pro"

  .text-1
    col(1/2)
    float left

  .text-2
    text-align right
    margin-right 50px

  #header-logo
    col(1/2, gutter: .5, cycle: 2)
    a
      width 100%
      height 48px
      background url(http://broker.commercegurus.com/wp-content/uploads/2015/10/broker-logo.png)
      background-repeat no-repeat
      float left
      text-indent -9999em
      overflow hidden
      margin-top 70px
  #header-menu
    col(1/2, cycle: 2)